<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context="com.qkx.wisdomwardrobe.RegisterActivity">
  <include layout="@layout/title"
      android:id="@+id/title_register"/>


    <RelativeLayout
        android:layout_below="@id/title_register"
        android:id="@+id/activity_register_RLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/activity_register_et_id"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="1dp"
            android:background="#ffffff"
            android:hint="账号（只能包含小写字母和数字，以小写字母开头）"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:textColor="#1A1A1A"
            android:textColorHint="#A9A9A9"
            android:textSize="15dp"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnm_"/>

        <EditText
            android:id="@+id/activity_register_et_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/activity_register_et_id"
            android:background="#ffffff"
            android:hint="密码（为保证安全，建议包含字母和数字）"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingBottom="1dp"
            android:paddingLeft="8dp"
            android:textColor="#1A1A1A"
            android:textColorHint="#A9A9A9"
            android:textSize="15dp" />


        <Button
            android:id="@+id/activity_register_bt_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/activity_register_et_password"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/activity_login_button_shape_normal"
            android:gravity="center"
            android:text="注     册"
            android:textSize="18dp"
            android:textColor="#ffffff"
            />


    </RelativeLayout>
</RelativeLayout>
